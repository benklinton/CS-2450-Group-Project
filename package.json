{
  "name": "cs-2450-group-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": "index.js",
  "pkg": {
    "assets": [
      "**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-react && electron-builder",
    "start": "electron .",
    "build-react": "cd src/renderer && npm run build",
    "dev": "npx concurrently \"npm run react\" \"npm run start\"",
    "react": "cd src/renderer && npm start"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "index.js",
      "src/electron/**/*",
      "src/renderer/build/**/*",
      "src/UVSim/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pkg": "^5.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8"
  }
}
